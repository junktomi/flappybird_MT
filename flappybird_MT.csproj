<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="flappy_bird.png" />
    <None Remove="flappy_hatter.png" />
    <None Remove="Images\also_cso.png" />
    <None Remove="Images\felso_cso.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="flappy_bird.png" />
    <Resource Include="flappy_hatter.png" />
    <Resource Include="Images\also_cso.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\felso_cso.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
