<Window x:Class="flappybird_MT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flappybird_MT"
        mc:Ignorable="d"
         Title="Flappy Bird" Width="600" Height="400"
        KeyDown="Window_KeyDown">
    <Grid>
        <Canvas Name="GameCanvas" Width="600" Height="400">
        
            <Canvas.Background>
                <ImageBrush Stretch="Fill" ImageSource="/flappy_hatter.png"/>
            </Canvas.Background>

            <Image x:Name="Bird" Width="42" Height="30" Source="/flappy_bird.png" RenderTransformOrigin="0.5,0.5"/>

        </Canvas>
    </Grid>
</Window>
